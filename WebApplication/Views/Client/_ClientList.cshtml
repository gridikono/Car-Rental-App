@model IEnumerable<WebApplication.ViewModel.Client.ClientViewModel>

<table class="table">
    <tr>
        <th>
            @Ajax.ActionLink(Html.DisplayNameFor(model => model.Name).ToString(), "SortByName", new AjaxOptions
                                                                                                           {
                                                                                                               HttpMethod = "GET",
                                                                                                               UpdateTargetId = "ClientList",
                                                                                                               InsertionMode = InsertionMode.Replace
                                                                                                           })
        </th>
        <th>

            @Ajax.ActionLink(Html.DisplayNameFor(model => model.IDNumber).ToString(), "SortById", new AjaxOptions
                                                                                                           {
                                                                                                               HttpMethod = "GET",
                                                                                                               UpdateTargetId = "ClientList",
                                                                                                               InsertionMode = InsertionMode.Replace
                                                                                                           })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IDNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Ajax.ActionLink("Details", "Details", new { id = item.UserID }, new AjaxOptions
                                                                    {
                                                                        HttpMethod = "GET",
                                                                        UpdateTargetId = "ClientDetails",
                                                                        InsertionMode = InsertionMode.Replace
                                                                    })
            </td>
        </tr>
    }

</table>
