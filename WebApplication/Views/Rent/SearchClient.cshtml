@model WebApplication.ViewModel.Rent.RentViewModel

<h2>Select The Client</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.LabelFor(model => model.searchString, new { @class = "control-label col-md-2" })
            <div class="col-md-10">

                @Html.EditorFor(model => model.searchString)
                @Html.ValidationMessageFor(model => model.searchString)

            </div>

        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Search" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@if (Model.UserList != null)
{
    <div class="col-md-8">
        <table class="table">
            <tr>
                <th>
                    Name
                </th>
                <th>
                    ID Number
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model.UserList)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(model => item.Name)
                    </td>

                    <td>
                        @Html.DisplayFor(model => item.IDNumber)
                    </td>
                    <td>
                        @Html.ActionLink("Select", "SelectClient", new { UserID = item.UserID, UserName = item.Name })
                    </td>
                </tr>
            }

        </table>
    </div>
    <div class="clearfix"></div>
}